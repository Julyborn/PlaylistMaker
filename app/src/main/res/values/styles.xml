<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black_light</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="settings_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="search_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="search_small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="track_detail_title">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">wrap_content</item>
\        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:titleMarginStart">16dp</item>
    </style>
    <style name="track_detail_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>




    <style name="playlist_track_strings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="playlist_creator_but">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
        <item name="cornerRadius">56dp</item>
        <item name="android:text">@string/new_playlist</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:visibility">visible</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="playlist_creator_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textColorHint">?attr/colorOnBackground</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:background">@drawable/playlist_edittext_tint</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog">
        <item name="android:background">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="options">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="save_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/tap_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/CustomBottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavText</item>
        <item name="itemIconSize">20dp</item> <!-- Уменьшение размера иконки -->
    </style>
    <style name="CustomBottomNavText">
        <item name="android:textSize">12sp</item>
\        <item name="android:layout_marginBottom">8dp</item> <!-- Модификация для отступа снизу -->
    </style>

</resources>
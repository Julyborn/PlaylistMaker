<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button" parent="Widget.Material3.Button.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black_light</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>



</resources>